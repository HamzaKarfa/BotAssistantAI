{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "ES2022",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*"],
}